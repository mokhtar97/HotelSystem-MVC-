    <script>
           jQuery.ajaxSettings.traditional = true;
            var slideIndex = 1;
        showSlides(slideIndex);
        setInterval("showSlides(slideIndex+=1)", 5000);

        function plusSlides(n) {
            showSlides(slideIndex += n);
        }

        function currentSlide(n) {
            showSlides(slideIndex = n);
        }

        function showSlides(n) {
            var i;
            var slides = document.getElementsByClassName("mySlides");
            var dots = document.getElementsByClassName("dot");
            if (n > slides.length) { slideIndex = 1 }
            if (n < 1) { slideIndex = slides.length }
            for (i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }
            for (i = 0; i < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" active", "");
            }
            slides[slideIndex - 1].style.display = "block";
            dots[slideIndex - 1].className += " active";
            }



         document.getElementById("search").onclick = function () {
                event.preventDefault();
                var name = document.getElementById("name").value;
                var check_in = document.getElementById("check_in").value;
                var check_out = document.getElementById("check_out").value;
                var e= document.getElementById("room_Type");
                var room_type = e.options[e.selectedIndex].value;
                $.ajax({
                    data: { name: name,check_in:check_in,check_out:check_out,room_type:room_type },
                    url: "@Url.Action("search", "hotels")",
                    success: function (result) { $("#hotels").html(result); },
                    //success: function () { alert("Success") },
                    error: function () { alert("error") }

                });
            };


            function myFunction() {
                event.preventDefault();
                document.getElementById("myDropdown").classList.toggle("show");
            }
            function Facilites() {
                event.preventDefault();
                document.getElementById("facilites").style.display = "block";
                document.getElementById("myDropdown2").classList.toggle("show");
            }
            function range_changed() {
                var range = document.getElementById("slider_id").value;
                document.getElementById("range_label").innerHTML = "price: " + range + "$";
                //alert(range);
                $.ajax({
                    data: { range: range },
                    url: "@Url.Action("FilterByRange", "hotels")",
                    success: function (result) { $("#hotels").html(result); },
                    //success: function () { alert("Success") },
                    error: function () { alert("error") }

                });
            }
            function rate_changed(rate) {
                event.preventDefault();
                document.getElementById("rate_span").style.display = "inline";
                document.getElementById("rate_span").innerHTML = ": "+rate;
                $.ajax({
                    data: { rate: rate },
                    url: "@Url.Action("FilterByRate", "hotels")",
                    success: function (result) { $("#hotels").html(result); },
                    //success: function () { alert("Success") },
                    error: function () { alert("error") }

                });
               // alert(rate);
            }


            // Close the dropdown menu if the user clicks outside of it
        window.onclick = function (event)
        {
                if (!event.target.matches('.dropbtn')) {
                    var dropdowns = document.getElementsByClassName("dropdown-content");
                    var i;
                    for (i = 0; i < dropdowns.length; i++) {
                        var openDropdown = dropdowns[i];
                        if (openDropdown.classList.contains('show')) {
                            openDropdown.classList.remove('show');
                        }
                    }
                }
        }
        var checkboxList=[];
        function check(e)
        {

            if (e.checked) {

                checkboxList.push(e.value);

            }

            else {
                for (var i = 0; i < checkboxList.length; i++)
                {
                    if (checkboxList[i] === e.value)
                    {
                        checkboxList.splice(i, 1);
                    }
                }
            }

        }
        function filter()
        {
            document.getElementById("facilites").style.display = "none";
            jQuery.ajaxSettings.traditional = true;
            $.ajax({
                data: { checkboxList: checkboxList  },
                url: "@Url.Action("FilterByFacility", "hotels")",
                //traditional = true,
                success: function (result) { $("#hotels").html(result); },
                //success: function () { alert("Success") },
                error: function () { alert("error") }

            });
        }
