@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm"}))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav" style="padding-left:10%;display:inline-flex;width:80%;text-align:center;font-size:1em;">
            <li style="width:50%;margin-right:1%">
                @Html.ActionLink( User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" , @class = "text-light font-weight-bolder"})
            </li>
            <li style="width:50%;"><a href="javascript:document.getElementById('logoutForm').submit()" class = "text-light font-weight-bolder">Logoff</a></li>
</ul>
    }
}
else
{
    <ul class="nav navbar-nav" style="padding-left:10%;display:inline-flex;width:80%;text-align:center;font-size:1em;">
        <li style="width:30%;">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "text-light font-weight-bolder" })</li>
        <li style="width:30%;">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "text-light font-weight-bolder" })</li>
    </ul>
}
